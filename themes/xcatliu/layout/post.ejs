<div class="grid">
    <div class="unit whole">
        <article class="typo article">
            <header class="article-header">
                <h1><%- page.title %></h1>
            </header>
            <section class="article-meta">
                <small>
                    <time class="date"><%- date(page.date) %></time>
                </small>
            </section>
            <hr>
            <section class="article-entry">
                <%- page.content %>
            </section>
            <%- partial('_partial/disqus') %>
        </article>
    </div>
</div>